<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/click_to_show_instructions"
            android:textAppearance="@style/OrdinaryTextAppearance" />

        <TextView
            android:id="@+id/toAddWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_widget_guide"
            android:textAppearance="@style/OrdinaryTextAppearance"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/toResizeWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/resize_widget_guide"
            android:textAppearance="@style/OrdinaryTextAppearance"
            android:visibility="gone"
            tools:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/workerStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/OrdinaryTextAppearance"
            tools:text="@string/worker_status" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/stopWorkerUpdates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stop_updates" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/startWorkerUpdates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_updates" />
        </LinearLayout>

        <TextView
            android:id="@+id/currentDivergence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/current_divergence"
            android:textAppearance="@style/OrdinaryTextAppearance" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/userDivergence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/hint_enter_new_divergence_here"
                android:importantForAutofill="no"
                android:inputType="numberSigned|numberDecimal"
                android:maxLength="9" />

            <Button
                android:id="@+id/changeDivergenceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/change" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
